<section class="famille-produits pt-5">
  <div class="container pt-5">
    <div class="col-md-12">
        <h3
          class="tist text-center bg-gradient fw-bold rounded text-decoration-underline"
        >Articles récents</h3>
        <div class="alert alert-danger" role="alert">
          Seuls les
          <a href="/auth" class="alert-link">utilisateurs connectés</a>
          peuvent accéder aux articles complets.
        </div>
      </div>
    <div class="row">
      <!-- CARD 1 -->
      {{#each dbArticle}}

        <div class="col-md-4 pb-2">
          <div class="card bg-gradient tist" style="width: auto;">
            <img
              src="assets/images/ankh-solid.png"
              
              class="card-img-top"
              alt=""
            />
            <div class="card-body text-center">
              <h2 class="card-title text-center mb-4">{{title}}</h2>
              <p class="card-text"> {{description}} {{ id }} </p>
              <a
                href="/article/{{ id }}"
                class="btn  bg-primary text-muted"
              ><i class="fas fa-ankh me-2"></i>Lire la suite...</a>
            </div>
          </div>
        </div>

      {{/each}}
    </div>
  </div>

</section>


