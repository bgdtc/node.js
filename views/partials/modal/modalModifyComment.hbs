<!-- MODAL APPLIQUER LES MODIFS -->
<div class="modal fade" id="modalModifyComment{{ comment.id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-bottom border-2 border-primary">
                <h5 class="modal-title" id="exampleModalLabel">Modifier Le commentaire :  </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="text-center" method="POST" action="/comment/{{ comment.id }}?_method=PUT">
                <div class="modal-body text-dark">
                    <div class="modal-body text-dark">
                        -Modification de : {{ comment.content }} id: {{ comment.id }}
                    </div>

                    <div class="pt-2 pb-2">
                        <label class="fw-bold text-primary" for="content">Contenu :</label>
                        <input class="form-control pt-2 pb-2 bg-dark text-white" type="text" value="{{ comment.content }}" name="content" required>
                    </div>
                    <div class="pt-2 pb-2">
                        <label class="fw-bold text-primary" for="is_avis">Avis (0) / Commentaire (1) :</label>
                        <input class="form-control pt-2 pb-2 bg-dark text-white" type="number" value="{{ comment.is_avis }}" min="0" max="1" name="is_avis" required>
                    </div>
                    <div class="pt-2 pb-2">
                        <label class="fw-bold text-primary" for="is_banned">Banni :</label>
                        <input class="form-control pt-2 pb-2 bg-dark text-white" type="number" value="{{ comment.is_banned }}" min="0" max="1" name="is_banned" required>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
            </form>

        </div>
    </div>
</div>



