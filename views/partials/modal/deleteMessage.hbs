<!-- MODAL SUPPRESSION MESSAGE -->
<div class="modal fade" id="modal2{{ message.id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Êtes vous sûr de vouloir
                    supprimer ce message ?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-dark">
                -Suppression du message de : {{ message.full_name }}
                <br>
                Ayant pour objet: {{ message.subject }}
                <br>
                Ayant pour contenu: {{ message.content }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Annuler</button>
                <form action="/messages/{{message.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>

            </div>
        </div>
    </div>
</div>