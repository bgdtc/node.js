<!-- MODAL NOUVEAU MESSAGE -->
<div class="modal fade" id="modalNewMessage" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            {{!-- TITRE DU MODAL DE NOUVEAU MESSAGE --}}
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Formulaire d'envoi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            {{!-- CORPS DU MODAL DE NOUVEAU MESSAGE --}}
            <div class="modal-body">
                <!--FORMULAIRE DE MESSAGE-->
                <section class="container-fluid" id="contactForm">

                    <div class="container  fw-bold pt-2 pb-3">
                        {{!-- TITRE NOUVEAU MESSAGE --}}
                        <div class="col-md-12 text-center">
                            <h2 class=" fw-bolder text-primary rounded  text-dark  pb-1 ">Nouveau Message
                            </h2>
                        </div>
                        {{!-- FORMULAIRE ENVOI MESSAGE --}}
                        <form action="/messages" method="POST" class=" pt-3  row pe-2  border-top border-primary">
                            {{!-- input destinataire --}}
                            <div class="col-md-12 pt-5">
                                <label for="email" class="form-label text-primary">Destinataire:</label>
                                <input type="email" name="email" class="form-control bg-dark text-white" id="email"
                                    required>
                            </div>
                            {{!-- input sujet --}}
                            <div class="col-12 ">
                                <label for="sujet" class="form-label text-primary">Objet:</label>
                                <input type="text" name="subject" class="form-control bg-dark text-white" id="sujet"
                                    required>
                            </div>
                            {{!-- input message --}}
                            <div class="col-12 ">
                                <label for="message" class="form-label text-dark">Message:</label>
                                <textarea name="content" class="form-control bg-dark text-white" id="message" cols="30"
                                    rows="10" required></textarea>
                            </div>
                            {{!-- cgu --}}
                            <div class="col-6 pt-4 justify-content-end">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input " id="check" required>
                                    <label for="check" class="form-check-label text-dark">
                                        J'accepte les <span class="text-primary"><a href="/">CGU</a></span>
                                        !
                                    </label>
                                </div>
                            </div>
                            {{!-- bouton send --}}
                            <div class="col-6 d-flex pt-4 justify-content-end pb-2">
                                <button type="submit" class="btn bg-dark  fw-bolder text-white">Envoyer</button>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>



