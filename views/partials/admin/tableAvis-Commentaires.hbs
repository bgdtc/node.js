{{!-- PARTIAL AVIS ET COMMENTAIRES ADMIN --}}
<table class="table table-bordered table-sm table-responsive-sm text-center">
    {{!-- LEGENDE TABLEAU --}}
    <thead class="pb-5">
        <tr class="pb-5">
            <th scope="col">#id</th>
            <th scope="col">#Art id</th>
            <th scope="col">Auteur</th>
            <th scope="col">Contenu</th>
            <th scope="col">Avis</th>
            <th scope="col">Banned</th>
            <th scope="col">Supprimer</th>
            <th scope="col">Modifier</i></th>
        </tr>
    </thead>
    {{!-- CONTENU DU TABLEAU --}}
    <tbody class="pb-5">
        {{#each dbComments}}
        <tr>
            <th scope="row">{{ this.id }}</th>
            <td>{{ this.article_id }}</td>
            <td>{{ this.author_name }}</td>
            <td>{{ this.content }}</td>
            <td class="avis">{{ this.is_avis }}</td>
            <td class="banned">{{ this.is_banned }}</td>
            <td>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                    data-bs-target="#modalDeleteComment{{ this.id }}"><i class="fas fa-trash-alt"><svg
                            xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-trash"
                            viewBox="0 0 16 16">
                            <path
                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd"
                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg></i></button>
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#modalModifyComment{{ this.id }}"><i class="fas fa-edit"><svg
                            xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-pen"
                            viewBox="0 0 16 16">
                            <path
                                d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                        </svg></i></button>
            </td>
            {{> modal/modalDeleteComment comment=this }}
            {{> modal/modalModifyComment comment=this }}
        </tr>
        {{/each }}
    </tbody>
</table>



<script>
    let aviss = document.getElementsByClassName('avis')
    let bannedd = document.getElementsByClassName('banned')
  
    for (i = 0; i < bannedd.length; i++) {
        if (bannedd[i].innerHTML == 1) {
            console.log('test')
            bannedd[i].innerHTML = "oui"
        }
        if (bannedd[i].innerHTML == 0) {
            bannedd[i].innerHTML = "non"
        }
    }

    for (i = 0; i < aviss.length; i++) {
        if (aviss[i].innerHTML == 1) {
            console.log('test')
            aviss[i].innerHTML = "oui"
        }
        if (aviss[i].innerHTML == 0) {
            aviss[i].innerHTML = "non"
        }
    }
    
</script>




