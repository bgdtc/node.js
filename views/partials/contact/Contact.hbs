<!--FORMULAIRE DE CONTACT-->
<div class="container">
<section class="pb-4" id="contactForm">

    <div class=" fw-bold pt-4 pb-3">
        {{!-- titre contact --}}
        <div class="col-md-12 text-center">
            <h4 class=" fw-bolder  text-primary border-top border-primary pt-3 text-primary  pb-1 ">Contactez-moi !</h4>
        </div>
        {{!-- formulaire de contact --}}
        <form action="/contact" method="POST" class=" pt-3  row  ">
            {{!-- input mail --}}
            <div class="col-md-6 pb-1 pt-5">
                <label for="email" class="form-label text-primary">Adresse mail :</label>
                <input type="email" name="email" class="form-control bg-dark text-white" id="email" required>
            </div>
            {{!-- input name --}}
            <div class="col-md-6 pt-5">
                <label for="nom" class="form-label text-primary">Nom :</label>
                <input type="text" name="full_name" class="form-control bg-dark text-white" id="nom" required>
            </div>
            {{!-- input sujet --}}
            <div class="col-12 pb-1">
                <label for="sujet" class="form-label text-primary">Objet :</label>
                <input type="text" name="subject" class="form-control bg-dark text-white" id="sujet" required>
            </div>
            {{!-- input message --}}
            <div class="col-12 ">
                <label for="message" class="form-label text-primary">Message :</label>
                <textarea name="content" class="form-control bg-dark text-white" id="message" cols="30" rows="10"
                    required></textarea>
            </div>
            {{!-- cgu --}}
            <div class="col-6 pt-4 justify-content-end">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input " id="check" required>
                    <label for="check" class="form-check-label text-dark">
                        J'accepte les <span class="text-primary"><a href="/CGU">CGU</a></span> !
                    </label>
                </div>
            </div>
            {{!-- bouton send --}}
            <div class="col-6 d-flex pb-5 pt-4 justify-content-end pb-2">
                <button type="submit" class="btn bg-dark  fw-bolder text-white">Envoyer</button>
            </div>
        </form>
    </div>




</section>
</div>



