{{!-- PAGE ID --}}
<section class="container-fluid bg-dark pt-5">
  <div class="container pb-3 pt-5">
    {{!-- CARD CONTENANT L'ARTICLE --}}
    <div class="card mb-3 bg-gradient border text-center border-primary">
      <img src="{{ artID.image }}" style="max-height:500px; max-width:100%;" class="card-img-top" alt="..." />
      <h1 class="text-dark">{{ artID.title }}</h1>
      <h2 class="text-dark">écrit par : {{artID.author_name}}</h2>
      <div class="card-body">
        <h5 class="card-title text-decoration-underline">{{ artID.description }}</h5>
        
          <p class="text-dark">
          {{ artID.content }}
          </p>
      
        <p class="card-text"><small class="text-muted">publié le
            {{ artID.update_date }}</small>
        </p>
      </div>
    </div>
    {{!-- AFFICHAGE DES COMMENTAIRES --}}
    {{#each comsIDd }}
    <div class="card text-white bg-primary mb-3">
      <div class="card-header">Commentaire n°{{this.id}}, écrit par: {{this.author_name}}</div>
      <div class="card-body">
        <p class="card-text text-white">{{this.content}}</p>
      </div>
    
    </div>
    {{/each}}
      {{#if userID}}
        <h1>111</h1>
      {{/if}}
    {{!-- ZONE POUR POSTER UN COMMENTAIRE --}}
    <div>
      <form action="/article/{{artID.id}}" method="POST" class=" pt-3  row  border-3 ">
        <div class="col-12">
          <label for="comment" class="form-label text-white">Votre Commentaire:</label>
          <textarea name="content" class="form-control bg-gradient text-primary" id="comment" cols="30" rows="10"
            required></textarea>
        </div>
        <div class="col-6 pt-2">
          <div class="form-check">
            <input type="checkbox" class="form-check-input " name="checked" id="check" required>
            <label for="gridCheck" class="form-check-label text-white">
              J'accepte les <span class="text-primary"><a href="/">CGU</a></span> !
            </label>
          </div>
        </div>
        {{#if user}}
        <div class="col-6 d-flex justify-content-end pt-2 pb-4">
          <button type="submit" class="btn bg-gradient  fw-bolder text-white">Envoyer</button>
        </div>
        {{else}}
        <div class="alert alert-danger" role="alert">
          Seuls les <a href="/auth" class="alert-link">utilisateurs connectés</a> peuvent poster un commentaire.
        </div>
        {{/if}}
      </form>
    </div>
  </div>
</section>



